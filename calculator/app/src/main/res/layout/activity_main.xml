<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tViewResult"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAlignment="textEnd"
            android:textSize="35dp"
            android:text="Result"
            android:gravity="end" />

        <TextView
            android:id="@+id/tView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAlignment="textEnd"
            android:textSize="35dp"
            android:gravity="end" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:stretchColumns="0,1,2,3">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:text="1"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:text="2"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:text="3"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/btnAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:text="+"
                    android:textSize="24dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:text="4"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:text="5"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:text="6"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/btnSub"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:text="-"
                    android:textSize="24dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:text="7"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:text="8"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:text="9"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/btnMul"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:text="*"
                    android:textSize="24dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:text="c"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/btn0"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:text="0"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/btnResult"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:text="="
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/btnDiv"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="5dp"
                    android:text="/"
                    android:textSize="24dp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>